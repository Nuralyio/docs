# Development Dockerfile for Nuraly Documentation
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy the rest of the application
COPY . .

# Expose Docusaurus development port
EXPOSE 3001

# Start Docusaurus development server
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--port", "3001"]
